@model UserDetail

@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create User</h2>
        </div>

        <div class="mb-3">
            <label asp-for="FirstName" class="col-form-label mt-4">First Name</label>
            <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter First Name..."/>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="col-form-label mt-4">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control" placeholder="Enter Last Name..."/>
        </div>        
        
        <div class="mb-3">
            <label asp-for="Hometown" class="col-form-label mt-4">Hometown</label>
            <input asp-for="Hometown" type="text" class="form-control" placeholder="Enter Hometown..."/>
        </div>        
        
        <div class="mb-3">
            <label asp-for="FavoriteColour" class="col-form-label mt-4">Favorite Colour</label>
            <input asp-for="FavoriteColour" type="text" class="form-control" placeholder="Enter Favorite Colour..."/>
        </div>

        <div class="mb-3">
            <label asp-for="Birthdate" class="col-form-label mt-4">Birthdate</label>
            <input asp-for="Birthdate" type="date" class="form-control" placeholder="YYYY/MM/DD" />
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary btn-lg">Create</button>
    <a asp-controller="UserDetails" asp-action="Index" class="btn btn-secondary btn-lg">Back to list</a>
</form>